{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "prepare": "husky",
    "commit": "bun run git-cz",
    "lint": "eslint .",
    "story:dev": "histoire dev",
    "story:build": "histoire build",
    "story:preview": "histoire preview"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix --ignore-pattern '.nuxt/*'",
      "prettier --write"
    ],
    "*.{html,scss,css,json,md}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@directus/visual-editing": "^1.1.0",
    "@nuxt/icon": "^2.2.0",
    "@pinia/colada": "^0.20.0",
    "@pinia/colada-nuxt": "^0.3.0",
    "@tanstack/vue-form": "^1.27.7",
    "@vueuse/core": "^14.1.0",
    "@vueuse/nuxt": "^14.1.0",
    "@vueuse/router": "^14.1.0",
    "dayjs": "^1.11.19",
    "isomorphic-dompurify": "^2.35.0",
    "nuxt": "^4.2.2",
    "valibot": "^1.2.0",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4",
    "vue-tsc": "^3.2.1",
    "vue3-toastify": "^0.2.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@eslint/css": "^0.10.0",
    "@eslint/js": "^9.39.2",
    "@histoire/plugin-nuxt": "^1.0.0-beta.1",
    "@histoire/plugin-vue": "^1.0.0-beta.1",
    "@pinia/nuxt": "^0.11.3",
    "commitizen": "^4.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-vue": "^10.6.2",
    "globals": "^16.5.0",
    "histoire": "^1.0.0-beta.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "3.6.2",
    "sass-embedded": "^1.97.1",
    "typescript-eslint": "^8.51.0"
  }
}
