{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "prepare": "husky",
    "commit": "bun run git-cz"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix --ignore-pattern '.nuxt/*'",
      "prettier --write"
    ],
    "*.{html,scss,css,json,md}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@directus/visual-editing": "^1.1.0",
    "@nuxt/icon": "1.15.",
    "dayjs": "^1.11.18",
    "dompurify": "^3.3.0",
    "nuxt": "^4.0.0",
    "nuxt-directus": "^5.7.0",
    "valibot": "^1.1.0",
    "vue": "^3.5.17",
    "vue-router": "^4.5.1",
    "vue-tsc": "^3.0.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/css": "^0.10.0",
    "@eslint/js": "^9.31.0",
    "commitizen": "^4.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-sonarjs": "^3.0.4",
    "eslint-plugin-vue": "^10.3.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "3.6.2",
    "sass-embedded": "^1.89.2",
    "typescript-eslint": "^8.37.0"
  }
}
